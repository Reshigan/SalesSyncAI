{
  "name": "salessync",
  "version": "1.0.0",
  "description": "Multi-Tenant Field Marketing Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed",
    "start": "cd backend && npm start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "./deployment/scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy-production.sh",
    "deploy:prod:seed": "./scripts/deploy-production.sh --seed",
    "publish": "./scripts/auto-publish.sh",
    "publish:msg": "./scripts/auto-publish.sh",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "backup:db": "docker exec salessync-postgres pg_dump -U salessync_user salessync > backup-$(date +%Y%m%d-%H%M%S).sql",
    "backup:prod:db": "docker exec salessync-postgres-prod pg_dump -U salessync_user salessync_prod > backup-prod-$(date +%Y%m%d-%H%M%S).sql",
    "health:check": "curl -f http://localhost:12000/health && curl -f http://localhost:12001/health",
    "health:prod": "curl -f http://localhost:3000/health && curl -f http://localhost/health"
  },
  "keywords": [
    "field-marketing",
    "sales",
    "multi-tenant",
    "mobile",
    "analytics",
    "emerging-markets"
  ],
  "author": "SalesSync Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend",
    "mobile"
  ],
  "prisma": {
    "schema": "backend/prisma/schema.prisma"
  }
}