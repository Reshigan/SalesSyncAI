# SalesSync Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://salessync_user:SalesSync2024!Prod@postgres:5432/salessync_prod
POSTGRES_PASSWORD=SalesSync2024!Prod

# Redis Configuration
REDIS_URL=redis://:SalesSync2024!Redis@redis:6379
REDIS_PASSWORD=SalesSync2024!Redis

# JWT Configuration
JWT_SECRET=SalesSync2024!JWT!Secret!Key!Production!$(openssl rand -hex 32)
JWT_REFRESH_SECRET=SalesSync2024!JWT!Refresh!Secret!Key!Production!$(openssl rand -hex 32)
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=https://app.salessync.com,https://salessync.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Email Configuration (Configure with your email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@salessync.com
SMTP_PASS=your-email-password

# AWS Configuration (for S3 file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=salessync-uploads-prod

# Google Maps API (for GPS and mapping features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenAI API (for AI analytics features)
OPENAI_API_KEY=your-openai-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_TRACKING_ID=your-analytics-id

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=SalesSync2024!Session!Secret!$(openssl rand -hex 32)

# Frontend Configuration
REACT_APP_API_URL=https://api.salessync.com
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=1.0.0

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_API_TIMEOUT=30000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=salessync-backups-prod