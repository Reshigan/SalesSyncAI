# SalesSync Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
NODE_ENV=production
DEPLOYMENT_ENV=production
DOMAIN_NAME=salessync.com
SSL_EMAIL=admin@salessync.com

# Database Configuration
POSTGRES_DB=salessync_production
POSTGRES_USER=salessync_user
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://salessync_user:your_secure_database_password_here@postgres:5432/salessync_production

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@salessync.com
FROM_NAME=SalesSync

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=salessync-production-files

# Backup Configuration
BACKUP_STORAGE_TYPE=s3
BACKUP_PATH=/app/backups
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_32_chars
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION=30d

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BRUTE_FORCE_FREE_RETRIES=5
BRUTE_FORCE_MIN_WAIT=300000
BRUTE_FORCE_MAX_WAIT=3600000

# Frontend Configuration
REACT_APP_API_URL=https://salessync.com/api
REACT_APP_WS_URL=wss://salessync.com

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_NOTIFICATION=admin@salessync.com
HEALTH_ALERT_WEBHOOK=https://your-monitoring-service.com/webhook

# Performance Configuration
MAX_UPLOAD_SIZE=100mb
SESSION_TIMEOUT=3600000
CACHE_TTL=3600
WORKER_PROCESSES=auto

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100mb
LOG_MAX_FILES=10

# Feature Flags
ENABLE_FRAUD_DETECTION=true
ENABLE_AI_ANALYTICS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_MOBILE_PRINTING=true
ENABLE_EDI_INTEGRATION=true

# Third-party Integrations
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
OPENAI_API_KEY=your_openai_api_key_for_ai_features
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
FORCE_UPDATE_VERSION=1.0.0
API_VERSION=v1

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=20
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Timezone Configuration
TZ=UTC
DEFAULT_TIMEZONE=Africa/Johannesburg

# Currency Configuration
DEFAULT_CURRENCY=ZAR
SUPPORTED_CURRENCIES=ZAR,USD,EUR,GBP

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,af,zu,xh

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=300
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_RETRIES=3

# Backup Retention
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/live/salessync.com/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/live/salessync.com/privkey.pem

# Docker Configuration
COMPOSE_PROJECT_NAME=salessync
COMPOSE_FILE=docker-compose.production.yml

# Deployment Configuration
DEPLOYMENT_STRATEGY=rolling
ROLLBACK_ON_FAILURE=true
BACKUP_BEFORE_DEPLOY=true
HEALTH_CHECK_TIMEOUT=300

# Monitoring Endpoints
METRICS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_PATH=/health
STATUS_PATH=/status

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_DSN=your_sentry_dsn_here

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your_google_analytics_id

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=https://salessync.com/api/csp-report

# CORS Configuration
CORS_ORIGIN=https://salessync.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_NAME=salessync_session
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600
API_BURST_LIMIT=100

# WebSocket Configuration
WS_ENABLED=true
WS_PATH=/socket.io
WS_CORS_ORIGIN=https://salessync.com

# Caching Configuration
CACHE_ENABLED=true
CACHE_PROVIDER=redis
CACHE_PREFIX=salessync:
CACHE_COMPRESSION=true

# Queue Configuration
QUEUE_ENABLED=true
QUEUE_PROVIDER=redis
QUEUE_PREFIX=salessync:queue:
QUEUE_CONCURRENCY=5

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION=90

# Data Retention
DATA_RETENTION_ENABLED=true
DATA_RETENTION_PERIOD=2555  # 7 years in days
SOFT_DELETE_ENABLED=true

# Compliance
GDPR_ENABLED=true
POPIA_ENABLED=true
DATA_EXPORT_ENABLED=true
DATA_DELETION_ENABLED=true

# Performance Monitoring
APM_ENABLED=true
APM_SERVICE_NAME=salessync-production
APM_ENVIRONMENT=production

# Load Balancing
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=least_conn
LOAD_BALANCER_HEALTH_CHECK=true

# Auto Scaling
AUTO_SCALING_ENABLED=false
AUTO_SCALING_MIN_INSTANCES=2
AUTO_SCALING_MAX_INSTANCES=10
AUTO_SCALING_TARGET_CPU=70

# Disaster Recovery
DR_ENABLED=true
DR_BACKUP_FREQUENCY=daily
DR_REPLICATION_ENABLED=false
DR_FAILOVER_ENABLED=false